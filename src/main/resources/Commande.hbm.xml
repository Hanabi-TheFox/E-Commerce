<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Commande" table="Commande" schema="E_commerce">
        <id name="idCommande" type="int">
            <column name="id_commande"/>
            <generator class="identity"/>
        </id>

        <property name="prix" type="big_decimal">
            <column name="prix" precision="10" scale="2" not-null="true"/>
        </property>

        <property name="status" type="string">
            <column name="status" length="50" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>
