<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.CommandeProduit" table="Commande_Produit" schema="E_commerce">
        <id name="idCommandeProd" type="int">
            <column name="id_commandeProd"/>
            <generator class="identity"/>
        </id>

        <property name="quantite" type="int">
            <column name="quantite" not-null="true"/>
        </property>

        <many-to-one name="commande" class="entity.Commande">
            <column name="id_commande" not-null="true"/>
        </many-to-one>

        <many-to-one name="produit" class="entity.Produit">
            <column name="id_produit" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>
