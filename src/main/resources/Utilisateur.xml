<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="entity.Utilisateur">
        <table name="utilisateur" schema="e_commerce" catalog=""/>
        <attributes>
            <id name="idUtilisateur">
                <column name="id_utilisateur" precision="-1"/>
            </id>
            <basic name="nom">
                <column name="nom" length="20"/>
            </basic>
            <basic name="prenom">
                <column name="prenom" length="20"/>
            </basic>
            <basic name="mail">
                <column name="mail" length="30"/>
            </basic>
            <basic name="motDePasse">
                <column name="motDePasse" length="20"/>
            </basic>
            <basic name="typeDeCompte">
                <column name="TypeDeCompte" precision="-1"/>
            </basic>
            <one-to-one name="clientByIdUtilisateur" optional="true" mapped-by="utilisateurByIdClient"
                        target-entity="entity.Client"/>
        </attributes>
    </entity>
</entity-mappings>
