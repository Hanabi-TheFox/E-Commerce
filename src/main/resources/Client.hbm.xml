<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Client" table="Client" schema="E_commerce">
        <id name="idClient" type="int">
            <column name="id_client"/>
            <generator class="identity"/>
        </id>

        <property name="compteBancaireNum" type="string">
            <column name="compteBancaireNum" length="19" not-null="true"/>
        </property>

        <property name="compteBancaireSolde" type="big_decimal">
            <column name="compteBancaireSolde" precision="10" scale="2"/>
        </property>

        <property name="droits" type="string">
            <column name="droits" length="5" not-null="true"/>
        </property>

        <property name="points" type="int">
            <column name="points"/>
        </property>

        <many-to-one name="commande" class="entity.Commande">
            <column name="id_commande"/>
        </many-to-one>

        <one-to-one name="utilisateur" class="entity.Utilisateur">
            <column name="id_client"/>
        </one-to-one>
    </class>
</hibernate-mapping>
