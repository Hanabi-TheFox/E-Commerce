<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="entity.CommandeProduit">
        <table name="commande_produit" schema="e_commerce" catalog=""/>
        <attributes>
            <id name="idCommandeProd">
                <column name="id_commandeProd" precision="-1"/>
            </id>
            <basic name="idCommande">
                <column name="id_commande" nullable="false" precision="-1"/>
            </basic>
            <basic name="idProduit">
                <column name="id_produit" nullable="false" precision="-1"/>
            </basic>
            <basic name="quantite">
                <column name="quantite" nullable="false" precision="-1"/>
            </basic>
            <many-to-one name="commandeByIdCommande" optional="true" target-entity="entity.Commande">
                <join-column name="id_commande" nullable="false" referenced-column-name="id_commande"/>
            </many-to-one>
            <many-to-one name="produitByIdProduit" optional="true" target-entity="entity.Produit">
                <join-column name="id_produit" nullable="false" referenced-column-name="id_produit"/>
            </many-to-one>
        </attributes>
    </entity>
</entity-mappings>
