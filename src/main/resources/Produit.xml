<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="entity.Produit">
        <table name="produit" schema="e_commerce" catalog=""/>
        <attributes>
            <id name="idProduit">
                <column name="id_produit" precision="-1"/>
            </id>
            <basic name="nom">
                <column name="nom" length="50"/>
            </basic>
            <basic name="prix">
                <column name="prix" precision="2"/>
            </basic>
            <basic name="stock">
                <column name="stock" nullable="false" precision="-1"/>
            </basic>
            <one-to-many name="commandeProduitsByIdProduit" mapped-by="produitByIdProduit"
                         target-entity="entity.CommandeProduit"/>
        </attributes>
    </entity>
</entity-mappings>
