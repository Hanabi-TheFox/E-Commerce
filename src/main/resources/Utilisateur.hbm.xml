<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Utilisateur" table="Utilisateur" schema="E_commerce">
        <id name="idUtilisateur" column="id_utilisateur" type="int">
            <generator class="identity"/>
        </id>
        <property name="nom" column="nom" type="string" length="20"/>
        <property name="prenom" column="prenom" type="string" length="20"/>
        <property name="mail" column="mail" type="string" length="30"/>
        <property name="motDePasse" column="motDePasse" type="string" length="20"/>
        <property name="typeDeCompte" column="TypeDeCompte" type="entity.TypeDeCompte">

        <meta attribute="enum-class">entity.TypeDeCompte</meta>
        </property>
    </class>
</hibernate-mapping>
